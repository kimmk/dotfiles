set $mode_system [l] lock screenÂ | [shift+e] logout | [s] suspend | [h] hibernate | [shift+r] reboot | [shift+s] shutdown
mode "$mode_system" {
     bindsym l mode "default", exec --no-startup-id i3lock -c000000 -i $wallpaper
     bindsym Shift+e mode "default", exec --no-startup-id i3-msg exit
     bindsym s mode "default", exec --no-startup-id i3lock -c000000 -i $wallpaper && systemctl suspend
     bindsym h mode "default", exec --no-startup-id systemctl hibernate
     bindsym Shift+r exec --no-startup-id systemctl reboot
     bindsym Shift+s exec --no-startup-id systemctl poweroff
     bindsym Return mode "default"
     bindsym Escape mode "default"
}
bindsym $mod+Shift+p mode "$mode_system"

# Float most dialog type windows
