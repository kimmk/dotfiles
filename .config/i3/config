# Media volume controls
bindsym XF86AudioMute exec amixer sset 'Master' toggle
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 2%-
bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 2%+

# Power management menu
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (Shift+r) reboot, (Shift+s) shutdown
mode "$mode_system" {
     bindsym l mode "default", exec --no-startup-id i3lock
     bindsym Shift+e mode "default", exec --no-startup-id i3exit logout
     bindsym s mode "default", exec --no-startup-id systemctl suspend
     bindsym h mode "default", exec --no-startup-id systemctl hibernate
     bindsym Shift+r exec --no-startup-id systemctl reboot
     bindsym Shift+s exec --no-startup-id systemctl shutdown

     # back to normal: Enter or Escape
     bindsym Return mode "default"
     bindsym Escape mode "default"
}

bindsym $mod+Shift+p mode "$mode_system"

