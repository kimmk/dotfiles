# urgent

command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
separator="|"
markup=pango

[volume]
interval=once
command=i3-volume
signal=10

[battery]
label=ðŸ”‹
command=acpi -b | grep -Eo '[0-9]{1,}%'
interval=10

[time]
command=echo $(date '+%d-%m-%Y %H:%M ')
interval=1

